<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/fragmentGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvtCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:textSize="@dimen/tamanioTitulo"
            android:layout_marginBottom="20dp"
            android:text="Category"/>


        <com.platzi.conf.view.ui.Fragments.GestureDetectGridView
            android:id="@+id/gesture_detect_grid_view"
            android:layout_below="@id/tvtCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@id/btnReinicia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gesture_detect_grid_view"
            android:layout_marginTop="20dp"
            android:text="Reiniciar"/>

        <ImageView
            android:id="@+id/ivRow1Column1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnReinicia"/>

    </RelativeLayout>

</FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>